    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') #{title}
          p.navbar-text.pull-right
            #logoutContainer
              div.btn.btn-inverse.pull-right#logout #{username}
            ul.nav
              li.active
                a#login(href='#') Home
              - if (!session)  
                  li
                    a#register(href='#') Register
              li
                a#about(href='#') About
              li
                a#contact(href='#') Contact
          // /.nav-collapse
    .container-fluid
      .row-fluid
        .span3
          .well.sidebar-nav
            ul.nav.nav-list
              li.nav-header Online Users
              #onlineUsers
          // /.well
        // /span
        .span9
